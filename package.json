{
  "name": "express-api-contracts",
  "version": "1.0.1",
  "description": "Type-safe Express APIs with zero boilerplate.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "private": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsx src/index.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nfaurass/express-api-contracts.git"
  },
  "keywords": [
    "express",
    "typescript",
    "zod",
    "api",
    "contract",
    "validation",
    "type-safe",
    "openapi",
    "swagger",
    "rest",
    "dx"
  ],
  "author": "nfaurass",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nfaurass/express-api-contracts/issues"
  },
  "homepage": "https://github.com/nfaurass/express-api-contracts#readme",
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/express": "^4.17.1",
    "@types/node": "^24.3.1",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.35.0",
    "express": "^4.17.1",
    "supertest": "^7.1.4",
    "tsx": "^4.20.5",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.43.0",
    "vitest": "^3.2.4",
    "zod": "^4.1.5"
  },
  "peerDependencies": {
    "express": "^4.17.1",
    "zod": "^4.1.5"
  }
}
